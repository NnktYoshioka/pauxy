#!/usr/bin/env python

import sys
import afqmcpy.initialise
import time

def main(input_file):
    init_time = time.time()
    (state, psi0, comm) = afqmcpy.cpmc.setup(input_file)
    afqmcpy.cpmc.run(state, psi0, comm)
    afqmcpy.cpmc.finalise(state, init_time)

if __name__ == '__main__':
    main(sys.argv[1])
